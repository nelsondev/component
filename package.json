{
  "name": "tron-component",
  "version": "1.0.1",
  "description": "Ultra-simple reactive web component library with clean APIs and powerful features",
  "main": "dist/tron-component.js",
  "module": "dist/tron-component.esm.js",
  "types": "types/index.d.ts",
  "files": [
    "dist/",
