    "performance"
  ],
  "author": "Nelson M <nelson@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nelsondev/tron-component.git"
  },
  "bugs": {
    "url": "https://github.com/nelsondev/tron-component/issues"
  },
  "homepage": "https://github.com/nelsondev/tron-component#readme",
  "dependencies": {
    "@preact/signals-core": "^1.5.0"
  },
  "devDependencies": {
    "rollup": "^4.0.0",
    "@rollup/plugin-terser": "^0.4.0",
    "@rollup/plugin-node-resolve": "^15.0.0"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "exports": {
